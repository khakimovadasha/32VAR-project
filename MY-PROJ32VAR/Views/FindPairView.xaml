            </ItemsControl>
            <Button Content="ÐŸÑ€Ð¾Ð²ÐµÑ€Ð¸Ñ‚ÑŒ" Width="120" Height="36" Command="{Binding CheckCommand}" Margin="10" IsEnabled="{Binding CanCheck}"/>
            <TextBlock Text="{Binding ResultMessage}" FontSize="16" FontWeight="Bold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>